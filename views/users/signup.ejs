<head>
  <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
    <!-- wrapper -->
        <div id="wrapper" style="padding : 50px 100px 500px 100px; margin : 100px;">
            <!-- content-->
            <div id="content">
                <!-- ID -->
            <form action="/users" method="post">
                <div>
                  <label for="username">ID : </label>
                  <input type="text" name='username' id="username" value="<%= user.username %>">
                  <% if(errors.username){ %> <!-- 3 -->
                      <span><%= errors.username.message %></span>
                  <% } %>
                </div>
                <div>
                  <label for="name">이름 : </label>
                  <input type="text" name='name' id='name' value="<%= user.name %>">
                  <% if(errors.name){ %>
                    <span><%= errors.name.message %></span>
                  <% } %>
                </div>
                <div>
                  <label for="password">Password : </label>
                  <input type="password" name="password" id="password" value="">
                  <% if(errors.password){ %> <!-- 3 -->
                      <span><%= errors.password.message %></span>
                  <% } %>
                </div>
                <div>
                    <label for="passwordConfirmation" >Password Confirmation : </label>
                <input type="password" id="passwordConfirmation" name="passwordConfirmation" value="" >
                <% if(errors.passwordConfirmation){ %> <!-- 3 -->
                    <span><%= errors.passwordConfirmation.message %></span>
                <% } %>

                </div>
                  <div>
                    <label for="email" >Email : </label>
                    <input type="text" name="email" id="email" value="<%= user.email %>">
                    <% if(errors.email){ %>
                        <span><%= errors.email.message %></span>
                      <% } %>
                  </div>
                <button type="submit" class="btn btn-primary" style="margin : 20px">Submit</button>
            </form>
            </div>
            <!-- content-->
        </div>
        <!-- wrapper -->
    <script src="/js/main.js"></script>
</body>
