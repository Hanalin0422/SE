                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
						<i class="fa fa-angle-left" aria-hidden="true"></i>
						<span class="sr-only">Previous</span>
					</a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
						<i class="fa fa-angle-right" aria-hidden="true"></i>
						<span class="sr-only">Next</span>
					</a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="/images/smp-img-01.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="/images/smp-img-02.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="/images/smp-img-03.jpg" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <form action="/products/<%= product._id %>?_method=put" method="post"  class="form-horizontal">
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="name"class=" form-control-label">상품 이름</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="name" name="name" placeholder="상품 이름 작성" class="form-control" value="<%= product.name %>">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="price" class=" form-control-label">가격</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="price" name="price" placeholder="상품 가격 입력" class="form-control" value="<%= product.price %>>
                                    <small class="form-text text-muted">상품 가격 입력하세요.</small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="manufacturer" class=" form-control-label">상품 제조사</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="manufacturer" id="manufacturer" class="form-control" value="<%= product.manufacturer %>">
                                        <option value="0">Please select</option>
                                        <option value="1">제조사1</option>
                                        <option value="2">제조사2</option>
                                        <option value="3">제조사3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="taste" class=" form-control-label">상품 맛</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="taste" id="taste" class="form-control" value="<%= product.taste %>">
                                        <option value="0">Please select</option>
                                        <option value="1">맛1</option>
                                        <option value="2">맛2</option>
                                        <option value="3">맛3</option>
                                    </select>
                                </div>
                            </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="weight" class=" form-control-label">상품 중량</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="weight" id="weight" class="form-control" value="<%= product.weight %>">
                                <option value="0">Please select</option>
                                <option value="1">200g</option>
                                <option value="2">600g</option>
                                <option value="3">1.2kg</option>
                            </select>
                        </div>
                    </div>
                           <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="origin" class=" form-control-label">상품 원산지</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="origin" id="origin" class="form-control" value="<%= product.origin %>">
                                        <option value="0">Please select</option>
                                        <option value="1">에티오피아</option>
                                        <option value="2">콜롬비아</option>
                                        <option value="3">케냐</option>
                                        <option value="4">그 외</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="body" class=" form-control-label">상품 상세 정보</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="body" id="body" rows="9" placeholder="상품 상세 정보 입력하시오." class="form-control" value="<%= product.body %>"></textarea>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="file" class=" form-control-label">상품 대표 이미지 등록</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="file" id="file" name="attachment" class="form-control-file" >
                                </div>
                            </div>
                            <!--
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="file-multiple-input" class=" form-control-label">여러 상품 이미지 등록</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                </div>
                            </div> -->
                            <class class="row form-group">
                                <div class="col col-md-3">
                                    <label for="stock" class=" form-control-label">재고</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="stock" name="stock" placeholder="0" class="form-control" value="<%= product.stock %>">
                                    <small class="help-block form-text">상품 재고 입력</small>
                                </div>
                            </class>
                        
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> 상품 수정
                                </button>
                              <a href="/products/<%= product._id %>">
                                  <button type="reset" class="btn btn-danger btn-sm">
                                  <i class="fa fa-ban"></i> 상품 수정 안함
                              </button>
                              </a>
						
                        </form>

